<?xml version="1.0" encoding="UTF-8"?>
<!-- 아파치 타일즈 3 DOCTYPE -->
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	
	<definition name="tilesbase" template="/WEB-INF/tiles/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/tiles/layout/header.jsp" />
		<put-attribute name="body" />
		<put-attribute name="footer" value="/WEB-INF/tiles/layout/footer.jsp" />
	</definition>
	
	<definition name="*" extends="tilesbase"> <!-- name : viewName -->
		<put-attribute name="body" value="/WEB-INF/views/{1}.jsp"></put-attribute>
	</definition>
	
	<definition name="*/*" extends="tilesbase"> <!-- name : viewName -->
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"></put-attribute>
	</definition>
	
	<definition name="*/*/*" extends="tilesbase"> <!-- name : viewName -->
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp"></put-attribute>
	</definition>
	
</tiles-definitions>